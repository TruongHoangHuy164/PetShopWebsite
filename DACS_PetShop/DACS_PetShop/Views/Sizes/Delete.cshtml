@model DACS_PetShop.Models.Size

@{
    ViewData["Title"] = "Delete Size";
}

<h1>Delete Size</h1>

<h3>Are you sure you want to delete this size?</h3>

<div>
    <h4>Size: @Model.Name</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SizeId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Sizes")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
